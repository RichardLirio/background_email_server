    "@fastify/rate-limit": "^10.3.0",
    "@types/nodemailer": "^6.4.17",
    "bcrypt": "^6.0.0",
    "bull": "^4.16.5",
    "dotenv": "^17.2.0",
    "fastify": "^5.4.0",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.5",
    "pino-pretty": "^13.0.0"
  }
