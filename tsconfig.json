{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",                               
    "baseUrl": "./",        
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["node"],                         
    "paths": {
      "@/*": ["./src/*"]
    },                                                         
    "resolveJsonModule": true,                           
    "declaration": true,                            
    "declarationMap": true,                           
    "sourceMap": true,                               
    "outDir": "./dist",     
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true, 
    "strict": true,                                    
    "noImplicitAny": true,                           
    "noImplicitReturns": true,                        
    "noFallthroughCasesInSwitch": true,               
    "noUncheckedIndexedAccess": true,               
    "skipLibCheck": true                                 
  },
  "include": ["src/**/*", "types/**/*"],    
}
